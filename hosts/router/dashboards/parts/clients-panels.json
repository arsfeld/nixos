              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "IP Address"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Device"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 200
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Download"
            },
            "properties": [
              {
                "id": "unit",
                "value": "binBps"
              },
              {
                "id": "custom.displayMode",
                "value": "color-text"
              },
              {
                "id": "decimals",
                "value": 2
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Upload"
            },
            "properties": [
              {
                "id": "unit",
                "value": "binBps"
              },
              {
                "id": "custom.displayMode",
                "value": "color-text"
              },
              {
                "id": "decimals",
                "value": 2
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Total Traffic"
            },
            "properties": [
              {
                "id": "unit",
                "value": "binBps"
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "decimals",
                "value": 2
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 12,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "id": 20,
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "Status"
          }
        ]
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "client_status",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "rate(client_traffic_bytes_total{direction=\"rx\"}[5m]) * 8",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "rate(client_traffic_bytes_total{direction=\"tx\"}[5m]) * 8",
          "format": "table",
          "instant": true,
          "refId": "C"
        }
      ],
      "title": "Client Status",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "Value #A": {
                "aggregations": [
                  "lastNotNull"
                ],
                "operation": "aggregate"
              },
              "Value #B": {
                "aggregations": [
                  "lastNotNull"
                ],
                "operation": "aggregate"
              },
              "Value #C": {
                "aggregations": [
                  "lastNotNull"
                ],
                "operation": "aggregate"
              },
              "description": {
                "aggregations": [],
                "operation": "groupby"
              },
              "ip": {
                "aggregations": [],
                "operation": "groupby"
              },
              "name": {
                "aggregations": [],
                "operation": "groupby"
              }
            }
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true,
              "direction": true
            },
            "indexByName": {
              "Value #A (lastNotNull)": 3,
              "name": 0,
              "ip": 1,
              "description": 2,
              "Value #B (lastNotNull)": 4,
              "Value #C (lastNotNull)": 5
            },
            "renameByName": {
              "Value #A (lastNotNull)": "Status",
              "Value #B (lastNotNull)": "Download",
              "Value #C (lastNotNull)": "Upload",
              "ip": "IP Address",
              "name": "Name",
              "description": "Device"
            }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "mode": "reduceRow",
            "reduce": {
              "reducer": "sum",
              "include": [
                "Download",
                "Upload"
              ]
            },
            "alias": "Total Traffic"
          }
        }
      ],
      "type": "table"
    },
